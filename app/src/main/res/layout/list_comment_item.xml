<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="16dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_profile" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"

            android:text="Yidi Wu"
            android:textColor="@android:color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/comment_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Great event dafadfadf asdf asd af asf af af asf a fas a ad  adf asdf s as fa"
            android:layout_marginStart="20dp"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <ToggleButton
                android:id="@+id/btn_thumb"
                android:layout_width="28dp"
                android:layout_height="33dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="2dp"
                android:background="@android:color/transparent"
                android:button="@drawable/custom_like_btn"
                android:textColor="@android:color/transparent" />

            <TextView
                android:id="@+id/num_thumbs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="12dp"
                android:text="2" />
            <TextView
                android:layout_marginTop="12dp"
                android:layout_marginLeft="5dp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Â·"/>
            <TextView
                android:id="@+id/comment_date"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="19/03/2018"/>
        </LinearLayout>

    </LinearLayout>


</LinearLayout>